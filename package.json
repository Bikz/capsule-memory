{
  "name": "capsule-memory-repo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "modelence dev",
    "build": "pnpm -r build && pnpm exec modelence build",
    "clean": "pnpm -r run clean",
    "lint": "pnpm -r run lint || true",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test || true",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepack": "pnpm build",
    "start": "node .modelence/build/app.mjs",
    "backfill": "node tools/backfill-metadata.mjs",
    "policies": "node tools/policy-inspector.mjs",
    "router": "node tools/capsule-router.mjs",
    "bench": "node tools/capsule-bench.mjs",
    "ingest": "node tools/capsule-ingest.mjs",
    "local": "node tools/capsule-local.mjs",
    "local:sync": "node tools/capsule-local-sync.mjs",
    "local:data": "node tools/capsule-local-data.mjs",
    "local:bundle": "node tools/capsule-local-bundle.mjs",
    "local:manifest": "node tools/capsule-local-manifest.mjs",
    "eval:retrieval": "tsx src/tools/evaluateRetrieval.ts",
    "eval:capture": "tsx src/tools/evaluateCapture.ts",
    "report:capture": "tsx src/tools/reportCaptureMetrics.ts",
    "check:pii": "node tools/pii-policy-check.mjs",
    "mcp": "node tools/capsule-memory-mcp.mjs",
    "mcp:manifest": "node tools/capsule-memory-mcp-init.mjs"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/pg": "^8.11.6",
    "@changesets/cli": "^2.27.7",
    "eslint": "^9.11.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
