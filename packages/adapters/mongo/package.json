{
  "name": "@capsule/adapter-mongo",
  "version": "0.0.0",
  "description": "MongoDB adapter for Capsule Memory",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@capsule/core": "workspace:*"
  },
  "dependencies": {
    "mongodb": "^6.9.0"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
